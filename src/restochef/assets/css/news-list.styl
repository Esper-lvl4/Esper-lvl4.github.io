.news-list-page
	overflow: hidden
.news-wrap
	display: grid
	grid-template: auto \/ 1fr 340px
	grid-gap: 40px
	padding: 0 20px 75px
	transition: all 0.2s ease
	&.hidden
		margin-right: -380px
		.news-expert-column
			opacity: 0

.news-list-wrap
	display: grid
	grid-template: repeat(auto-fit, 1fr) \/ auto
	grid-gap: 80px
.news-item
	position: relative
	flex(column, nowrap)
	padding: 20px 26px 53px
	box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.1)
	.page-subtitle
		margin: 4px 0 16px
		color: $black
		text-decoration: none
		&:hover
			text-decoration: underline
	.more-button
		position: absolute
		bottom: -15px
		right: 39px
		z-index: 2
.news-info
	flex(column, nowrap)
.news-author-date
	fonts(12px, 18px, 300)
	color: $l-gray
.news-image
	flex(row, nowrap, flex-start, center)
	width: 100%
	padding: 0 0 24px
	img
		max-width: 100%
		height: auto

.news-expert-column
	justify-self: center
	align-self: start
	opacity: 1
	transition: all 0.2s ease
	img
		max-width: 100%
		height: auto
		margin-top: 46px

@media (max-width: 768px)
	.news-list-page
		overflow: visible
	.news-wrap
		grid-template: auto \/ auto
		padding: 0 0 75px
		&.hidden
			margin-right: 0
			.news-expert-column
				opacity: 1
