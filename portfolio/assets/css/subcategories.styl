.subcategory-info
	list-style: none
	padding: 10px 25px
	margin: 0
	li
		padding: 5px 0 0
		fonts(14px, 21px)
	span
		color: $l-gray
.category-item.no-subcategories
	&::after
		display: none
	.category-wrapper
		padding-bottom: 28px
		background: $white
		box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.25)
		border-bottom-left-radius: 30px
		border-bottom-right-radius: 30px
