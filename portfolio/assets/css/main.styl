// Main-slider-styles
.main-page-slider
	position: relative
	margin-top: 32px
	overflow: hidden
.slide
	position: relative
	.more-link
		margin-top: 40px
.slide-image
	display: block
	max-width: 100%
	height: auto
	margin-left: auto
.slide-text
	position: absolute
	top: 0
	left: 0
	max-width: 560px
.slide-label
	color: $l-gray
	fonts(18px, 27px)
.slide-title
	display: block
	margin-top: 20px
	fonts(42px, 49px, 700)
.slider-nav
	position: absolute
	bottom: 0
	left: 0
	z-index: 3
	flex(row, nowrap)
.slider-dot
	width: 132px
	height: 72px
	padding: 7px 10px
	margin-right: 18px
	background-color: rgba(242, 242, 242, 0.9)
	transition: all 0.3s ease
	&:last-of-type
		margin-right: 0
	&:hover, &.active
		background-color: rgba(209, 170, 224, 0.27)
		cursor: pointer
.dot-number
	display: block
	fonts(25px, 29px, 900)
.dot-text
	display: block
	fonts(9px, 11px)

// Main page tabs
.main-page-products
	margin-top: 44px
	padding-bottom: 80px
	.more-wrap
		justify-self: end
		grid-column: 2 \/ -1
.site-tabs
	display: grid
	grid-template: 60px 1fr \/ auto 1fr
	grid-gap: 54px 20px
	align-items: center
.tabs-nav
	position: relative
	grid-column: 1 \/ 2
	flex(row, wrap, flex-start, center)
	padding: 0 15px 4px 0
	border-bottom: 2px solid $l-gray
.tabs-brick
	position: absolute
	bottom: -1px
	left: 0
	display: block
	width: 66px
	height: 6px
	background: $black
	transition: all 0.4s ease
.tab-button
	padding: 15px 0 15px
	margin-right: 50px
	border: none
	outline: none
	box-shadow: none
	background: none
	fonts(28px, 41px)
	&:last-of-type
		margin-right: 0
	&:hover
		cursor: pointer
.tab-content
	grid-column: 1 \/ -1
	.products-wrap
		display: none
		&.js-active
			display: grid
.main-page-grid
	display: grid
	grid-template: auto \/ 1fr auto
	grid-gap: 35px
	align-items: center
	.more-wrap
		grid-column: 2 \/ -1
		justify-self: end
	.main-page-grid-content
		grid-column: 1 \/ -1
	.products-wrap
		grid-column: 1 \/ -1
.main-page-solution
	.page-title
		margin: 0
	.solution-item
		box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.1)
		&:hover
			box-shadow: none

.brands-wrap
	display: grid
	grid-template: auto \/ repeat(auto-fit, 200px)
	grid-gap: 30px 20px
	justify-content: space-evenly

.brand-item
	&:hover
		img
			opacity: 1
	img
		opacity: 0.5
		transition: all 0.3s ease

.reviews-list-wrap
	grid-column: 1 \/ -1
	max-width: 100%
	padding: 20px
	.swiper-slide
		height: auto
		padding: 27px 27px 58px
		box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.1)
		.review-item
			height: 100%

.review-item
	flex(row, wrap, flex-start, center)
	.portfolio-title
		display: inline-block
		margin: 0 0 14px
	.portfolio-date
		position: static

.review-info
	flex-grow: 2
	flex(row, wrap)
	width: 50%

.review-image
	margin-right: 25px

.prev-review, .next-review
	position: absolute
	bottom: 42px
	z-index: 3
	width: 3px
	height: 6px
	padding: 0
	border: none
	outline: none
	box-shadow: none
	background: none
	cursor: pointer
	g
		filter: none;
	&:hover g
		filter: url(#filter0_d)
.prev-review
	right: 96px
.next-review
	right: 62px

.main-page-categories
	.page-title
		margin-bottom: 25px

.main-page-seo
	flex(row, wrap)

.seo-text
	flex-grow: 2
	width: 45%
	margin-right: 20px
	color: $d-gray
	fonts(18px, 27px)
	.more-link
		margin-top: 20px
	.page-title
		margin-bottom: 45px

.seo-image
	flex-grow: 2
	width: 45%
	margin: 0 10px

@media (max-width: 1080px)
	.slider-nav
		bottom: auto
		left: auto
		right: 0
		top: 0
		flex-flow: column nowrap
	.slider-dot
		margin-top: 7px

@media (max-width: 960px)
	// .main-page-seo
	// 	flex-flow: column nowrap
	.seo-text, .seo-image
		width: 100%
		margin-bottom: 20px

@media (max-width: 768px)
	.slider-nav
		display: none
	.slide-text
		max-width: 100%
		width: 100%
		height: 100%
		background-color: rgba(255, 255, 255, 0.7)
	.slide-title
		fonts(30px, 39px, 600)
	.site-tabs, .main-page-grid
		grid-template: auto \/ 100%
		.more-wrap
			grid-column: 1 \/ -1
			grid-row: -1
			justify-self: center
@media (max-width: 640px)
	.review-item
		flex-flow: column nowrap
	.review-image
		margin-bottom: 20px
		text-align: center
	.review-info
		width: 100%

@media (max-width: 500px)
	.slide-title
		margin-top: 10px
		fonts(20px, 22px, 600)
	.slide .more-link
		margin-top: 10px
