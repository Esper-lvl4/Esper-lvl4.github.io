.page-content
	position: relative
	// max-height: 400px
	padding-bottom: 70px
	overflow: hidden
	fonts(16px, 25px)
	color: $d-gray
	&::after
		content: ''
		position: absolute
		bottom: 0
		left: 0
		z-index: 2
		display: block
		width: 100%
		height: 40px
		background: $white
	&.show
		max-height: 100%
	.js-spread-text
		position: absolute
		bottom: 10px
		left: 50%
		z-index: 3
		transform: translateX(-50%)
	h2
		margin: 14px 0
		color: $d-gray
		fonts(28px, 41px)
	h3
		margin: 13px 0
		color: $d-gray
		fonts(24px, 35px)
	h4
		margin: 12px 0
		color: $d-gray
		fonts(20px, 29px)
	h5
		margin: 12px 0
		color: $d-gray
		fonts(18px, 27px)
	h6
		margin: 10px 0
		color: $d-gray
		fonts(16px, 25px, 600)
	img
		max-width: 100%
		max-height: 100%
		width: auto
		height: auto
	iframe
		max-width: 100%
		max-height: 100%
		width: auto
		height: auto
		border: none
	a
		color: $d-gray
	p
		margin: 7px 0
	ul
		list-style: none
		margin: 7px 0
		padding-left: 0
		li
			display: block
			color: #727272
			font-size: 16px
			line-height: 25px
			font-weight: 400
			padding-left: 13px
			margin-top: 7px
			&::before
				content: ''
				display: inline-block
				width: 5px
				height: 5px
				margin: 5px 9px 4px 0
				border-radius: 50%
				background: $gray
