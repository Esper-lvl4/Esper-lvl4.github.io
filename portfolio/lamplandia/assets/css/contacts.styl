.contacts
	flex(row, nowrap, space-between)
	padding-bottom: 42px

.contact-item
	flex(column, nowrap)
	width: 45%
	.upper-title
		margin: 0 0 25px
	a, span
		color: $gray
		&:not(:last-child)
			margin-bottom: 15px
	a
		text-decoration: none
		&:hover
			color: $violet

.contacts-map
	iframe
		width: 100%
		height: 277px
		border: none

@media (max-width: 550px)
	.contacts
		flex-direction: column
		align-items: center

	.contact-item
		align-items: center
		width: 100%
		margin-bottom: 25px
		text-align: center
