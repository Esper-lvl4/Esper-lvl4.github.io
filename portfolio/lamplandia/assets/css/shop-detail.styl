.shop-detail
	flex(row, nowrap, space-between)
	padding-bottom: 46px
.shop-detail-map
	padding-bottom: 53px
	iframe
		max-width: 100%
		width: 100%
		height: 553px
		border: none

.shop-detail-text
	width: 70%
	padding-right: 30px
	p
		color: $gray

.shop-detail-image
	img
		max-width: 100%
		height: auto

@media (max-width: 550px)
	.shop-detail
		flex-direction: column-reverse

	.shop-detail-text
		width: 100%
		padding: 0

	.shop-detail-image
		width: 100%
		text-align: center

	.shop-detail-map
		iframe
			height: 350px
